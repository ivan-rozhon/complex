{
  "name": "complex",
  "version": "2.0.0",
  "description": "Experimental NoSQL PHP CMS",
  "scripts": {
    "install": "(npm install); (cd ./web && npm install); (cd ./admin && npm install)",
    "build": "(npm run build:web); (npm run build:admin);",
    "postbuild": "npm run export:admin",
    "start:web": "cd ./web && npm run start",
    "serve:web": "cd ./web && npm run serve",
    "build:web": "cd ./web && npm run build",
    "start:admin": "cd ./admin && npm run start",
    "build:admin": "cd ./admin && npm run build",
    "export:admin": "copyfiles --flat ./admin/dist/admin/admin-app.* ./web/dist/_core/admin/admin-app/",
    "export:web:data": "(copyfiles --flat ./web/dist/_source/*.json ./web/src/_source/); (copyfiles --flat ./web/dist/_source/data/*.json ./web/src/_source/data/)"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ivan-rozhon/complex.git"
  },
  "author": "Ivan Rozho≈à",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ivan-rozhon/complex/issues"
  },
  "homepage": "https://github.com/ivan-rozhon/complex#readme",
  "devDependencies": {
    "copyfiles": "^2.3.0"
  },
  "dependencies": {}
}
